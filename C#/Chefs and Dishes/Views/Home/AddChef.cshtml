@model Chef
<h1>Add a Chef</h1>

<form action="AddChef" method="post">
    <div class="form-row">
        <div class="col-lg-3">
        <label for="FirstName"></label>
        <input asp-for="FirstName"  class="form-control my-3 p-2" >
         <span asp-validation-for ="FirstName"></span>
        </div>
    </div>
   <div class="form-row">
    <div class="col-lg-3">
        <label for="LastName"></label>
        <input asp-for="LastName"  class="form-control my-3 p-2" >
        <span asp-validation-for ="LastName"></span>
    </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <label for="DateofBirth"></label>
            <input asp-for="DateofBirth"  class="form-control my-3 p-2" >
            <span asp-validation-for ="DateofBirth"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
           <button type="submit">Add Chef</button>
            
        </div>
    </div>
</form>