@using Dojo_Survey_with_Model.Models
@model Survey
<link rel="stylesheet" href="~/css/site.css">

<div class="container">
<form class="justify-space column flex" action="Create" method="post">

<div class="name1 flex justify-space">
<span asp-validation-for="Name"></span>
<label asp-for="Name"></label>
<input asp-for="Name">
</div>
<div class="language flex justify-space">
<span asp-validation-for="Language"></span>   
<label asp-for="Language">Favorite Language:</label>
<select class="biger" asp-for="Language" id="">
    <option value="Python">Python</option>
    <option value="C#(.net)">C#(.net)</option>
    <option value="Java">"Java"</option>
</select>
</div>
<div class="location flex justify-space">
 <span asp-validation-for="Location"></span>   
<label asp-for="Location">Dojo Location:</label>
<select class="biger" name="Location" id="">
    <option value="Albania">Albania</option>
    <option value="Germany">Germany</option>
    <option value="USA">"USA"</option>
</select>
</div>
<div class="comment flex justify-space column">
<label asp-for="Comment">Your comment(optional):</label>
 <span asp-validation-for="Comment"></span>   

<input class="smaller"  asp-for="Comment">
</div>
<button class="button" href="show">Submit</button>
</form>
</div>