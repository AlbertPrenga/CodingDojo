@model Dish

<h6 class="display-6 text-center">Add a new Dish</h6>

<div class="row">
    <p class="col-sm-1"><a href="/">Home</a></p>
</div>

<form action="Update/@Model.DishId" method="post">
    <div class="row">
  <div class="col-sm-4">
    <div class="form-row">
    <div class="form-group col-md-6">
        <span asp-validation-for="Chef"></span>
      <label asp-for="Chef"></label>
      <input asp-for="Chef" class="form-control" >
    </div>
    <div class="form-group col-md-6">
      <span asp-validation-for="Name"></span>
      <label asp-for="Name">Name of dish</label>
      <input asp-for="Name" class="form-control">
    </div>
  </div>
  <div class="form-group">
      <span asp-validation-for="Calories"></span>
      <label asp-for="Calories"></label>
      <input asp-for="Calories" class="form-control">
  </div>
  </div>
  
  <div class="col-sm-4">
    <div class="form-group">
    <span asp-validation-for="Tastines"></span>    
    <label asp-for="Tastines"></label>
    <input asp-for="Tastines" class="form-control ">
  </div>
  </div>

  <div class="col-sm-4">
    <div class="form-row">
  <span asp-validation-for="Description"></span>    
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control ">
    </div>
    <div class="form-group col-md-4">
  <button type="submit" class="btn btn-primary">Edit Dish</button>
    </div>

  </div>
  </div>
 </div>
  
</form>